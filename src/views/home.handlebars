<div class="saludo">
  <h2>Lista de todos los productos agregados hasta el momento:</h2>
  {{#if products}}
    <div class="products">
      {{#each products}}
        <div>
          <h3>{{this.title}}</h3>
          <p>{{this.description}}</p>
          <h4>${{this.price}}</h4>
          <h5>Stock disponible: {{this.stock}}</h5>
          <hr />
        </div>
      {{/each}}
    </div>
  {{else}}
    <h3>No existen productos...</h3>
  {{/if}}
</div>
<script src="/socket.io/socket.io.js"></script>